{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build, Run and Clean",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "make all && ./main && make clean"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
